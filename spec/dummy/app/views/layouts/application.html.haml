<!DOCTYPE html>
%html
  %head
    %meta{charset: 'UTF-8'}
    %meta{name: 'viewport', content: 'width=device-width'}
    = csrf_meta_tags
    %title Raw Products Store
    %link{href: 'https://fonts.googleapis.com/css?family=Open+Sans:300,400,600', |
      rel: 'stylesheet'} |
    = stylesheet_link_tag('application', media: 'all')
    = javascript_include_tag('application')
    = yield :head
  %body{id: controller_name}
    .bs-wrapper
      -# = render('layouts/header')
      - if flash[:alert]
        .container
          .alert.alert-danger.alert-dismissable{role: 'alert'}
            %button{type: 'button', class: 'close', data: {dismiss: 'alert'}, |
              aria: {label: 'Close'}} |
              %span{'aria-hidden': 'true'} &times;
            = flash[:alert]
      - if flash[:notice]
        .container
          .alert.alert-success.alert-dismissable{role: 'alert'}
            %button{type: 'button', class: 'close', data: {dismiss: 'alert'}, |
              aria: {label: 'Close'}} |
              %span{'aria-hidden': 'true'} &times;
            = flash[:notice]
      = yield
    -# = render('layouts/footer')
    %script{src: 'https://use.fontawesome.com/67602d7308.js'}
